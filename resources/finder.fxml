<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@sendStyle.css"/>
   </stylesheets>
   <center>
      <ListView fx:id="listaPuteva" styleClass="myPadding,myMargin" BorderPane.alignment="CENTER"/>
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER_LEFT">
         <children>
            <Label styleClass="myPadding" text="Uzorak">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <TextField styleClass="myPadding" fx:id="inputField">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="findBtn" styleClass="myPadding" mnemonicParsing="false" onAction="#doFind" text="TraÅ¾i">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" styleClass="myPadding" text="Prekini" onAction="#doAbort" fx:id="stopBtn">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </top>
</BorderPane>
